<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.indianservers.onlinegrocery.fragment.PlaceOrderFragment">
<LinearLayout
    android:id="@+id/recyclerorder"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/confirmorderrecycler"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>
</LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_margin="10dp"
        android:id="@+id/spinnertimeslot"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Spinner
            android:spinnerMode="dialog"
            android:background="@drawable/spinner_bg"
            android:id="@+id/choosedate"
            android:layout_width="match_parent"
            android:layout_height="60dp">
        </Spinner>
        <Spinner
            android:spinnerMode="dialog"
            android:entries="@array/times_slot"
            android:layout_marginTop="10dp"
            android:background="@drawable/spinner_bg"
            android:id="@+id/choosetime"
            android:layout_width="match_parent"
            android:layout_height="60dp">
        </Spinner>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:id="@+id/ordersummury"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Summary"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"/>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:text="Order Items"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_gravity="right"
                android:gravity="right"
                android:id="@+id/orderTotalnoofitems"
                android:textStyle="bold"
                android:text="5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:text="Delivery Date"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="right"
                android:id="@+id/orderDeliveryDate"
                android:textStyle="bold"
                android:text="12 Dec 2017"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:text="Delivery Time"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="right"
                android:id="@+id/orderDeliveryTime"
                android:textStyle="bold"
                android:text="9AM-1PM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:text="Delivery Charges"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="right"
                android:id="@+id/orderDeliveryCharges"
                android:textStyle="bold"
                android:text="0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:text="TotalPayableAmount"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="right"
                android:id="@+id/orderDeliverypayamount"
                android:textStyle="bold"
                android:text="125"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <Button
            android:background="@color/buttoncolor"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:id="@+id/placeOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Place Order"/>
    </LinearLayout>

</LinearLayout>
