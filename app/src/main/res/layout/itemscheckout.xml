<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/checkoutimage"
            android:layout_weight="0"
            android:clickable="false"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="itemname"
                    android:id="@+id/checkitemname"
                    android:layout_marginTop="15dp"
                    android:clickable="false"/>
                <TextView
                    android:visibility="gone"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="itemname"
                    android:id="@+id/checkitemmeasure"
                    android:layout_marginTop="15dp"
                    android:clickable="false"/>
                <TextView
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="itemcost"
                    android:id="@+id/checkitemcost"
                    android:layout_marginTop="8dp"
                    android:layout_below="@+id/checkitemname"
                    android:layout_alignLeft="@+id/checkitemname"
                    android:layout_alignStart="@+id/checkitemname"
                    android:clickable="false"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/checkitemid"
                android:layout_weight="0"
                android:visibility="gone"
                android:clickable="false"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/checkitemqu"
                android:layout_weight="0"
                android:visibility="gone"
                android:clickable="false"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/checkoutitem_delete"
                android:src="@drawable/ic_trash"
                android:layout_gravity="center_vertical|right"
                android:onClick="deleteItem"
                android:focusable="true"
                android:clickable="true" />
        </LinearLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>
