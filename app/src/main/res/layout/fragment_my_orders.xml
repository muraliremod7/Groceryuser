<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.indianservers.onlinegrocery.MyOrdersFragment">
    <LinearLayout
        android:background="#B7B7B7"
        android:visibility="visible"
        android:id="@+id/ordersrecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/orderslistview" />
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:orientation="vertical"
        android:id="@+id/ordersStart"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Not Yet Orders Placed"
            android:textSize="18sp"
            android:textStyle="bold" />
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/emptycart"
            android:layout_gravity="center"/>
        <Button
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:background="@color/buttoncolor"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:text="Place Orders"
            android:layout_gravity="center"
            android:id="@+id/startShoppingNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
